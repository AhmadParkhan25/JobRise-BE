generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id               Int                 @id @default(autoincrement())
  name             String
  email            String              @unique
  password         String
  confirm_password String
  email_verified   EmailVerifiedStatus
  otp              String?             @default("")
  role             Role
  createdAt        DateTime            @default(now())
  updateAt         DateTime            @updatedAt()

  Profile profiles?
  Company company?
  Cv      cv?
}

model roles {
  id   Int    @id
  name String
}

model profiles {
  id        Int    @id @default(autoincrement())
  user_id   Int    @unique
  full_name String
  age       String
  adress    String
  image     String
  phone     String
  bio       String

  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model company {
  id           Int    @id @default(autoincrement())
  user_id      Int    @unique
  company_name String
  address      String
  logo         String
  website      String
  industry     String
  description  String

  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model cv {
  id             Int    @id @default(autoincrement())
  user_id        Int    @unique
  name           String
  email          String
  phone          String
  linkedIn       String
  portofolio_url String
  city           String
  bio            String

  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

enum EmailVerifiedStatus {
  yes
  no
}

enum Role {
  user
  company
}
